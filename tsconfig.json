{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@client/*": ["./client/src/*"],
      "@server/*": ["./server/src/*"],
      "@tests/*": ["./tests/*"]
    }
  },
  "include": [
    "tests/**/*",
    "e2e/**/*",
    "vitest.config.ts"
  ],
  "exclude": [
    "node_modules",
    "client",
    "server"
  ]
}
