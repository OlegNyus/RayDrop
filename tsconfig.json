{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "types": ["vitest/globals", "node"],
    "paths": {
      "@client/*": ["./client/src/*"],
      "@server/*": ["./server/src/*"],
      "@tests/*": ["./tests/*"]
    }
  },
  "include": [
    "tests/**/*",
    "vitest.config.ts"
  ],
  "references": [
    { "path": "./client" },
    { "path": "./server" }
  ]
}
